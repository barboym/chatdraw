{
  "name": "chatdraw",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "server",
  "workspaceFolder": "/usr/src/app",
  "overrideCommand": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "github.copilot",
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "ms-vscode.js-debug-nightly",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "remoteUser": "vscode",

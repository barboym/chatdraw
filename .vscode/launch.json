{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload",
                "--port",
                "80",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "vitest",
            "request": "launch",
            "runtimeArgs": [
                "run"
            ],
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/vitest",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "name": "tsx",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/tsx",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/frontend/node_modules/**",
            ],
        },
        {
            "name": "Frontend dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend"
        }
    ]
}